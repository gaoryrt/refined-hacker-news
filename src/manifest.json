{
  "name": "Refined Hacker News",
  "short_name": "Refined HN",
  "version": "0.0.0",
  "description": "âœ¨ Add useful features and tweak a few stuff to make the HN experience better without changing the look and feel",
  "homepage_url": "https://github.com/plibither8/refined-hacker-news",
  "manifest_version": 3,
  "permissions": ["storage", "history", "tabs"],
  "host_permissions": [
    "*://news.ycombinator.com/*",
    "*://hacker-news.firebaseio.com/v0/*",
    "*://title.mihir.ch/*",
    "*://wayback.now.sh/*",
    "*://hn.algolia.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "128": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "run_at": "document_start",
      "matches": ["*://news.ycombinator.com/*"],
      "js": ["custom-css.js"]
    },
    {
      "run_at": "document_end",
      "matches": ["*://news.ycombinator.com/*"],
      "css": ["refined-hacker-news.css"],
      "js": ["browser-polyfill.min.js", "refined-hacker-news.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["loader.gif"],
      "matches": ["*://news.ycombinator.com/*"]
    }
  ]
}
